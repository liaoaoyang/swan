{
    "name": "liaoaoyang/swan",
    "description": "Simple WeChat Alert Notifier.",
    "keywords": ["framework", "laravel"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=5.6.4",
        "jenssegers/mongodb": "^3.2",
        "laravel/framework": "5.4.*",
        "laravel/tinker": "~1.0",
        "league/commonmark": "^0.15.6",
        "overtrue/laravel-lang": "~3.0",
        "overtrue/wechat": "^3.3",
        "predis/predis": "1.1.1"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~5.7"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize"
        ],
        "detect-composer-json": [
            "php -r 'if(extension_loaded(\"mongodb\")){printf(\"MongoDB\\n\");copy(\"composer.mongodb.json\", \"composer.json\");}else{printf(\"MySQL\n\");copy(\"composer.mysql.json\", \"composer.json\");}'"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "repositories": {
        "packagist": {
            "type": "composer",
            "url": "https://packagist.phpcomposer.com"
        }
    }
}
